GIT_URI="git://git.xmms.se/xmms2/gxmms2.git"
inherit git

DESCRIPTION="Simple GTK+ XMMS2 client"
HOMEPAGE="http://wejp.k.vu/projects/xmms2/gxmms2"
#SRC_URI="http://wejp.k.vu/wp-content/uploads/2009/07/${P}.tar.gz"

src_compile() {
	lndirs
	cd ${B}
	cygmake gxmms2
}

src_install() {
	cd ${B}
	dobin gxmms2.exe
	newicon gxmms2src/gxmms2_mini.xpm gxmms2.xpm
	make_desktop_entry gxmms2 gxmms2 gxmms2 "AudioVideo;Audio;Player"
}

